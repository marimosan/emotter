<header class="navbar navbar-fixed-top header">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav">
        <% if logged_in? %>
          <%= render 'layouts/header_left' %>
          <li><%= link_to "世界", global_path, class: "glyphicon glyphicon-plane" %></li>
        <% else %>
          <%= render 'layouts/header_left' %>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li class="dropdown">
            <a class="dropdown-toggle navbar-brand" data-toggle="dropdown">
              <%= image_tag (current_user.image_url), class:"img-responsive", id:"header-image" %>
            </a>
            <ul class="dropdown-menu setting-menu">
              <li><%= link_to "ログアウト", logout_path %></li>
              <li><%= link_to "アカウント削除", setting_path %></li>
            </ul>
          </li>
          <li class="btn btn-primary navbar-btn" data-toggle="modal" data-target="#emoru-modal">エモる</li>
          <div class="modal fade" id="emoru-modal" role="dialog">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button class="close" data-dismiss="modal" aria-hidden="true">×</button>
                  <h4 class="modal-title">今の感情を選んでください</h4>
                </div>
                <div class="modal-body">
                  <ul class="emo-form">
                    <%= button_tag '喜', class: "btn btn-joy btn-emo", emo: "joy" %>
                    <%= button_tag '怒', class: "btn btn-anger btn-emo", emo: "anger" %>
                    <%= button_tag '哀', class: "btn btn-sad btn-emo", emo: "sad" %>
                    <%= button_tag '楽', class: "btn btn-happiness btn-emo", emo: "happiness" %>
                    <div id="emo-text"><%= emo_text(session[:emo]) %></div>
                  </ul>
                </div>
                <div class="modal-footer">
                  <ul class="emo-form">
                    <%= button_to "送信", emoru_path, class: "btn btn-primary" %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% else %>
          <li><%= link_to "ログイン", '/auth/twitter' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
