<% provide(:title, "アカウント削除") %>
<div class="row">
  <aside class="col-xs-4">
    <%= render 'shared/home_left' %>
  </aside>
  <div class="col-xs-8">
    <h2>アカウント削除</h2>
    <div class="alert alert-danger" role="alert">
      <p><strong>本当に削除しますか？</strong></p>
      <p>注：これまでのエモも全て削除されます</p>
      <p>　　Twitterのアカウントやツイートは削除されません</p>
    </div>
    <%= form_tag(users_destroy_path, method: :delete) do %>
      <%= check_box_tag :tweet_delete_option, true ,"on" %>
      <%= label_tag :tweet_delete_option,"Twitterに連携投稿したエモもすべて削除する" %>
      <%= submit_tag "削除", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
