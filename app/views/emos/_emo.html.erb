<li id="emo-<%= emo.id %>">
  <%= image_tag(emo.user.image_url, class: "emo-image") %>
  <span class="user"><%= link_to emo.user.name, users_show_path(emo.user.nickname) %>  @<%=link_to emo.user.nickname, users_show_path(emo.user.nickname) %>   　  <%= time_ago_in_words(emo.created_at) %> ago. </span>
  <span class="content"><%= emo.content %></span>
  <span class="delete">
    <%= link_to "delete", emos_destroy_path(emo.id) %>
  </span>

  <span class="delete">
    <%= link_to "delete", '#', 'data-toggle': "modal", 'data-target': "#emo-destroy-modal-#{emo.id}" %>
  </span>

  <div class="modal fade" id="emo-destroy-modal-<%= emo.id %>" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button class="close" data-dismiss="modal" aria-hidden="true">×</button>
          <h4 class="modal-title">本当に削除しますか？</h4>
        </div>
        <div class="modal-body">
            <div class="alert alert-danger" role="alert">Twitterに連携投稿された呟きも削除されます</div>
        </div>
        <div class="modal-footer">
          <ul class="emo-form">
            <%= button_to "削除", emos_destroy_path(emo.id), method: :delete,  class: "btn btn-primary" %>
          </ul>
        </div>
      </div>
    </div>
  </div>






</li>
